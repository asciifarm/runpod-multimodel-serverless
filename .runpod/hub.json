
{
  "title": "Multi-Model Image & Video Worker",
  "description": "Hub-style serverless worker (SD3 image + SVD video) using the official RunPod pattern.",
  "type": "serverless",
  "category": "image",
  "config": {
    "runsOn": "GPU",
    "containerDiskInGb": 30,
    "gpuCount": 1,
    "env": [
      {
        "key": "WORKER",
        "input": {
          "name": "Model",
          "type": "string",
          "options": [
            { "label": "Stable Diffusion 3 Medium", "value": "sd3_medium" },
            { "label": "Stable Video Diffusion XT 1.1", "value": "svd_xt_1_1" }
          ],
          "default": "sd3_medium"
        }
      }
    ]
  }
}
