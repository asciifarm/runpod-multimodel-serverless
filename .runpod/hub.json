
{
  "title": "Multi‑Model Image & Video Worker",
  "description": "Serverless SD3 (text‑to‑image) and SVD (image‑to‑video) worker with pay‑per‑second billing.",
  "type": "serverless",
  "category": "image",
  "config": {
    "runsOn": "GPU",
    "containerDiskInGb": 30,
    "gpuCount": 1,
    "env": [
      {
        "key": "REPO_URL",
        "value": "https://github.com/asciifarm/runpod-multimodel-serverless.git"
      },
      {
        "key": "WORKER",
        "input": {
          "name": "Model",
          "type": "string",
          "options": [
            { "label": "Stable Diffusion 3 Medium", "value": "sd3_medium" },
            { "label": "Stable Video Diffusion XT 1.1", "value": "svd_xt_1_1" }
          ],
          "default": "sd3_medium"
        }
      }
    ]
  }
}
